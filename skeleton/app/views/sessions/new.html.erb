<h2>Sign In</h2>
<form action="<%=session_url%>" method="post">
  <%= auth_token_input %>

  <label for="user_username">
    Username</label>
    <input type="text" name="user[username]" value=""
    id="user_username">

  <label for="user_password">
    Password</label>
    <input type="password" name="user[password]" value=""
    id="user_password">

  <input type="submit" value="Sign In">

</form>
